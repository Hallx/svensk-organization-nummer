<% unless (params[:search_string].empty?) %>
	<h1>Listing companies for search <%=params[:search_string]%></h1>
	
	<table>
	  <tr>
	    <th>Name</th>
	    <th>Organization number</th>
	    <th></th>
	  </tr>
	
	<% @companies.each do |company| %>
	  <tr>
	    <td><%= company[:name] %></td>
	    <td><%= company[:organization_number] %></td>
		<td><b><i><%= "perfect match" if (company[:name].downcase == params[:search_string].downcase) %></i></b></td>
	  </tr>
	<% end %>
	</table>
<% else %>
	<h1>Search for a company</h1>
<% end %>
<br />
<br />

<%= form_tag companies_search_path, :method => 'get' do %>
  <p>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag :search_string, params[:search_string] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<br />